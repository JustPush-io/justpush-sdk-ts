{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist"
    },
    "ts-node": {
        "esm": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts", "*.ts"],
    "exclude": ["node_modules"]
}
